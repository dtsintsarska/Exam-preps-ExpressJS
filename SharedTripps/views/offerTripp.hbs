<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Offer Tripp</h1>
        <div style="padding: 5%;">
            <form method="POST" action="/tripp/create">
                <div class="form-group">
                    <label for="startAndEndPoint">Starting Point - End Point</label>
                    <input type="text" name="startAndEndPoint" class="form-control" id="startAndEndPoint"
                        aria-describedby="emailHelp" placeholder="Studentski grad - Pamporovo"
                        value="{{oldInput.startAndEndPoint}}">
                </div>
                <div class="form-group">
                    <label for="dateTime">Date - Time</label>
                    <input type="text" name="dataTime" class="form-control" id="dateTime"
                        placeholder="29 December 2019 - 19:00" value="{{oldInput.dataTime}}">
                </div>
                <div class="form-group">
                    <label for="carImage">Car Image</label>
                    <input type="text" name="carImage" class="form-control" id="carImage" placeholder="https://..."
                        value="{{oldInput.carImage}}">
                </div>
                <div class="form-group">
                    <label for="seats">Seats</label>
                    <input min="1" max="6" name="seats" type="number" class="form-control" id="seats" placeholder="4..."
                        value="{{seats}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" name="description" class="form-control" id="description"
                        placeholder="Price, Car information..." value="{{oldInput.description}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>